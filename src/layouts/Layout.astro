---
import "../styles/global.css";
import LogoutButton from "../components/auth/LogoutButton.tsx";

interface Props {
  title?: string;
  description?: string;
}

const { title = "JustFuel", description = "Zarządzaj swoimi samochodami i śledź zużycie paliwa" } = Astro.props;

// Check authentication state
const isAuthenticated = Astro.locals.isAuthenticated ?? false;
const user = Astro.locals.user;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-background">
    {isAuthenticated ? (
      <header class="w-full border-b border-border bg-background">
        <div class="container mx-auto flex items-center justify-between px-4 py-4">
          <a
            href="/"
            class="text-xl font-bold text-primary hover:text-primary/90 transition-colors"
            aria-label="JustFuel - Strona główna"
          >
            JustFuel
          </a>
          <nav class="flex items-center gap-4">
            {user?.email ? (
              <span class="text-sm text-muted-foreground" aria-label={`Zalogowany jako ${user.email}`}>
                {user.email}
              </span>
            ) : null}
            <LogoutButton client:load />
          </nav>
        </div>
      </header>
    ) : null}
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
