---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const { title = "JustFuel", description = "Zarządzaj swoimi samochodami i śledź zużycie paliwa" } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-background">
    <div class="min-h-screen flex flex-col items-center justify-center px-4 py-12">
      <div class="w-full max-w-md">
        <div class="mb-8 text-center">
          <a
            href="/"
            class="inline-block text-2xl font-bold text-primary hover:text-primary/90 transition-colors"
            aria-label="JustFuel - Strona główna"
          >
            JustFuel
          </a>
        </div>
        <div
          class="bg-white dark:bg-gray-800 rounded-lg shadow-md border border-gray-200 dark:border-gray-700 p-6 md:p-8"
        >
          <slot />
        </div>
        <div class="mt-6 text-center text-sm text-muted-foreground">
          <p>&copy; {new Date().getFullYear()} JustFuel. Wszystkie prawa zastrzeżone.</p>
        </div>
      </div>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
