---
import Layout from "../../layouts/Layout.astro";
import { CarDetailsView } from "../../components/cars/CarDetailsView";

const title = "Szczegóły Samochodu - JustFuel";
const description = "Szczegółowe informacje o samochodzie i historia tankowań";

const carId = Astro.params.carId;

if (!carId) {
  return Astro.redirect("/cars");
}
---

<Layout title={title} description={description}>
  <CarDetailsView client:load carId={carId} />
</Layout>
